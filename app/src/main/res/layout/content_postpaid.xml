<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background_white"
        android:padding="20dp"
        android:layout_margin="16dp"
        android:elevation="5dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageOperator"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:civ_border_width="1dp"
            app:civ_border_color="#949393"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/txtOperator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:layout_below="@id/imageOperator"
            android:gravity="center"
            />
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/txtOperator"
            android:layout_marginTop="16dp"
            android:padding="10dp"
            android:visibility="gone"
            >
            <RadioButton
                android:id="@+id/rbRecharge"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Recharge"
                android:checked="true"
                android:textColor="@color/colorBlack"
                />
            <RadioButton
                android:id="@+id/rbTopUp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Top-Up"
                android:textColor="@color/colorBlack"
                />
        </RadioGroup>
        <LinearLayout
            android:id="@+id/mobile"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_below="@id/radioGroup"
            android:layout_marginTop="20dp"
            android:background="@drawable/border2">
            <EditText
                android:id="@+id/txtMobileNumber"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_smartphone_black_24dp"
                android:hint="Mobile Number"
                android:inputType="number"
                android:paddingLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="1dp"
                android:background="@color/colorWhite"
                />
            <ImageView
                android:id="@+id/myContact"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:paddingRight="2dp"
                android:src="@drawable/ic_perm_contact"
                />
        </LinearLayout>

        <EditText
            android:id="@+id/txtAmount"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/border2"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/rs"
            android:hint="Amount"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:inputType="number"
            android:layout_below="@id/mobile"
            />

        <TextView
            android:id="@+id/btnPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtAmount"
            android:layout_marginTop="20dp"
            android:background="@drawable/backgraund_btn"
            android:gravity="center"
            android:padding="12dp"
            android:text="Bill Pay"
            android:textColor="#fff"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>
</LinearLayout>