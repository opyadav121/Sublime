<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_white"
    android:layout_margin="7dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:elevation="5dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorOrangeTrans"
            android:text="Pan Card"
            android:textColor="@color/colorWhite"
            android:padding="8dp"
            android:gravity="center"
            />
        <ImageView
            android:id="@+id/addPancard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_a_photo"
            android:padding="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorOrangeTrans"
            android:text="Address Proof"
            android:textColor="@color/colorWhite"
            android:padding="6dp"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorOrangeTrans"
                    android:text="Front"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    />
                <ImageView
                    android:id="@+id/addPhotoFront"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_a_photo"
                    android:padding="20dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorOrangeTrans"
                    android:text="Back"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    />
                <ImageView
                    android:id="@+id/addPhotoBack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_a_photo"
                    android:padding="20dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Address Proof"
        />
    <Spinner
        android:id="@+id/spSelectProof"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="Address Proof"
        android:layout_marginTop="10dp"
        android:layout_marginRight="60dp"
        >
    </Spinner>
    <EditText
        android:id="@+id/txtIdNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="DL No./Aadhar No./Voter ID"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgraund_btn"
        android:text="Upload"
        android:textColor="@color/colorWhite"
        />
</LinearLayout>