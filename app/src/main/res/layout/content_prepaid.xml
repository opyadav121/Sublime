<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="wrap_content">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background_white"
        android:padding="20dp"
        android:layout_margin="16dp"
        android:elevation="5dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageOperator"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/airtelicon"
            app:civ_border_width="1dp"
            app:civ_border_color="#949393"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/txtOperator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Airtel"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:layout_below="@id/imageOperator"
            android:gravity="center"
            />
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/txtOperator"
            android:layout_marginTop="16dp"
            android:padding="10dp"
            android:visibility="gone"
            >
            <RadioButton
                android:id="@+id/rbRecharge"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Recharge"
                android:checked="true"
                android:textColor="@color/colorBlack"
                />
            <RadioButton
                android:id="@+id/rbTopUp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Top-Up"
                android:textColor="@color/colorBlack"
                />
        </RadioGroup>
        <EditText
            android:id="@+id/txtMobileNumber"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/border2"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_smartphone_black_24dp"
            android:hint="Mobile Number"
            android:layout_marginTop="20dp"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:layout_below="@id/radioGroup"
            />
        <EditText
            android:id="@+id/txtAmount"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/border2"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/rs"
            android:hint="Amount"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:inputType="number"
            android:layout_below="@id/txtMobileNumber"
            />
        <LinearLayout
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_below="@id/txtAmount">
            <Button
                android:id="@+id/browsePlan"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="40dp"
                android:text="Browse Plan"
                android:background="@drawable/back_btn"
                android:textColor="@color/colorWhite"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/Offer"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="40dp"
                android:text="Offer"
                android:background="@drawable/back_btn"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

        <TextView
            android:id="@+id/btnPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/confirm"
            android:layout_marginTop="20dp"
            android:background="@drawable/backgraund_btn"
            android:gravity="center"
            android:padding="12dp"
            android:text="Bill Pay"
            android:textColor="#fff"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>
</LinearLayout>