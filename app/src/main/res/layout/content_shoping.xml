<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff"
    android:padding="10dp"
    android:elevation="3dp"
    >
    <TextView
        android:id="@+id/recharge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text=" Shopping "
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="14sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <Common.OvalImageView
                android:id="@+id/ic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/flipkart"
                android:contentDescription="Button"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flipkart"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="#000"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="0dp"
            android:orientation="vertical"
            >
            <Common.OvalImageView
                android:id="@+id/iconBills"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/mintra"
                android:contentDescription="Button"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Myntra"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="#000"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="0dp"
            android:orientation="vertical"
            >
            <Common.OvalImageView
                android:id="@+id/iconOffer"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/firstcry"
                android:contentDescription="Button"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FirstCry"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="#000"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="0dp"
            android:orientation="vertical"
            >
            <Common.OvalImageView
                android:id="@+id/iconElectricity"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/zivame"
                android:contentDescription="Button"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zivame"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="#000"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="16dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="0dp"
            android:orientation="vertical"
            >
            <Common.OvalImageView
                android:id="@+id/Notice"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/amazon"
                android:contentDescription="Button"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amazon"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="#000"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="0dp"
            android:orientation="vertical"
            >
            <Common.OvalImageView
                android:id="@+id/Shoping"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/shopclues"
                android:contentDescription="Button"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shopclues"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="#000"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="0dp"
            android:orientation="vertical"
            >
            <Common.OvalImageView
                android:id="@+id/Landline"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/mogolix"
                android:contentDescription="Button"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mogolix"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="#000"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="0dp"
            android:orientation="vertical"
            >
            <Common.OvalImageView
                android:id="@+id/Mobile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/lenskart"
                android:contentDescription="Button"
                android:layout_gravity="center"
                android:padding="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lenskart"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="#000"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="16dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="0dp"
            android:orientation="vertical"
            >
            <Common.OvalImageView
                android:id="@+id/iconNotice"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ajio"
                android:contentDescription="Button"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ajio"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="#000"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="0dp"
            android:orientation="vertical"
            >
            <Common.OvalImageView
                android:id="@+id/iconShoping"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/fabindia"
                android:contentDescription="Button"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FabIndia"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="#000"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="0dp"
            android:orientation="vertical"
            >
            <Common.OvalImageView
                android:id="@+id/iconPoll"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/licious"
                android:contentDescription="Button"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Licious"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="#000"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="0dp"
            android:orientation="vertical"
            >
            <Common.OvalImageView
                android:id="@+id/Poll"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/limeroad"
                android:contentDescription="Button"
                android:layout_gravity="center"
                android:padding="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LimeRoad"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="#000"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>