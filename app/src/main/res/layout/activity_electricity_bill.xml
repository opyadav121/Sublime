<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Recharge.ElectricityBillActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>

        <RelativeLayout
        android:id="@+id/Parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background_white"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:elevation="5dp"
        >
            <android.support.design.widget.TextInputLayout
                android:id="@+id/state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            <EditText
                android:id="@+id/txtState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter State Name"
                android:keyboardNavigationCluster="false"
                android:clickable="true"
                android:focusableInTouchMode="true"
                />
            </android.support.design.widget.TextInputLayout>
        <ListView
            android:id="@+id/listViewState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:elevation="8dp"
            android:background="#f9f9f9"
            android:layout_below="@id/state"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:padding="5dp"
            android:visibility="gone"
            >
        </ListView>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/state"
        >
            <EditText
                android:id="@+id/txtBoard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select board"
                android:clickable="true"
                android:focusableInTouchMode="true"
                />
    </android.support.design.widget.TextInputLayout>
    <ListView
            android:id="@+id/listViewBoard"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:visibility="gone"
            android:elevation="8dp"
            android:layout_below="@id/board"
            android:layout_alignParentRight="true"
            android:background="#f9f9f9"
            >
        </ListView>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/board"
                >
            <EditText
                android:id="@+id/txtServiceNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:keyboardNavigationCluster="false"
                />
            </android.support.design.widget.TextInputLayout>
        <TextView
            android:id="@+id/instruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_below="@id/service"
            android:textSize="12sp"
            android:text="Your Service provider will take two working days to consider bill paid in their accounts."
            />
            <Button
                android:id="@+id/btnPay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/backgraund_btn"
                android:layout_below="@id/instruction"
                android:text="Make Payment"
                android:textColor="@color/colorWhite"
                android:padding="5dp"
                />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FCF1DD"
        >
        <TextView
            android:id="@+id/recent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recent Bill Payment"
            android:padding="5dp"
            android:textSize="14sp"
            android:textColor="@color/colorBlack"
            />
    </LinearLayout>
</LinearLayout>